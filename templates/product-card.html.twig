<div class="card col-4 mb-3" style="width: 18rem;">
  <img src="{{ asset('uploads/'~product.image~'') }}" class="card-img-top" alt="{{ product.name }}">
  <div class="card-body">
    <h5 class="card-title">{{ product.name }}</h5>
    <p class="card-text">{{ product.description | u.truncate(50, '...') }}</p>
    <div class="row justify-content-between align-items-center">
        <div class="col text-center">
            <a href="{{ path('app_cart_add', {id: product.id, routeName: routeName, routeParameters:routeParameters }) }}"><i class="bi bi-plus-square" style="font-size: 2rem;"></i></a>
        </div>
        <div class="col text-center">
        {% set incart = false %}
        {% for cartProduct in cartProducts %}
            {% if cartProduct.product.id ==  product.id and incart == false %}
                <div>{{ cartProduct.quantity }}</div>
                {% set incart = true %}
            {% endif %}
        {% endfor %}
        {% if incart == false %}
            <div>0</div>
        {% endif %}
        </div>
        <div class="col text-center">
        <a href="{{ path('app_cart_remove', {id: product.id, routeName: routeName, routeParameters:routeParameters}) }}"><i class="bi bi-dash-square" style="font-size: 2rem;"></i></a>
        </div>
    </div>
  </div>
</div>